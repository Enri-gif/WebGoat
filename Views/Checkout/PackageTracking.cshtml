@model PackageTrackingViewModel

@{
    ViewData["Title"] = "PackageTracking";
}

<h1>
    Package Tracking
</h1>
@Html.ValidationSummary()
<div>
    <div>
        @if (Model.Orders != null)
        {
            <p>
                Here are all of your current orders.
            </p>
            <h3>
                Your orders
            </h3>
            <div>
                <table class="receipt">
                    <tbody>
                        <tr>
                            <th>Order</th>
                            <th>Order date</th>
                            <th>Shipping Cost</th>
                            <th>Shipping Method</th>
                            <th>Order Total</th>
                            <th>Tracking number</th>
                        </tr>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.GetOrderID()</td>
                                <td>@order.GetOrderDate().ToString("yyyy-MM-dd")</td>
                                <td>@order.GetFreight().ToString("F")</td>
                                <td>@order.GetShipVia()</td>
                                <td>@order.GetTotal().ToString("F")</td>
                                <td>
                                    @if (order.GetShipment() == null)
                                    {
                                        <span>No tracking number recorded.</span>
                                    }
                                    else
                                    {
                                        <a asp-action="PackageTracking" 
                                           asp-route-carrier="@order.GetShipment().Shipper.CompanyName"
                                           asp-route-trackingNumber="@order.GetShipment().TrackingNumber">
                                           @order.GetShipment().TrackingNumber</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
<div>
    @using (Html.BeginForm("GoToExternalTracker", "Checkout"))
    {
        <p>
            Please enter your carrier and tracking number below.
        </p>
        <span>Carrier</span>
        <br>
        <input name="carrier" type="text" value="@Model.SelectedCarrier">
        <br>
        <span>Tracking Number</span>
        <br>
        <input name="trackingNumber" type="text" value="@Model.SelectedTrackingNumber">
        <br>
        <input type="submit" value="Track Package">
    }
</div>